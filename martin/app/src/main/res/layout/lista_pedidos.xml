<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#763737"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="35dp">

        <ImageView
            android:id="@+id/imagen_prod-clientes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="65dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="50dp">

            <TextView
                android:id="@+id/id_prod_clientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="id"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/nombre_prod_clientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="nombre"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/precio_prod_clientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="precio"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="direccion"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/telefonsin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="telÃ©fono"
                android:textColor="@android:color/background_light"
                android:textColorHint="@android:color/background_light" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>